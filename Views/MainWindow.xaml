<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:CustomControls="clr-namespace:dbz.UIComponents.CustomControls;assembly=dbz.UIComponents" x:Class="OpenTTDSaveSync.MainWindow"
        Title="Well Good Saves" Height="244" Width="353">
    <Grid Margin="0,0,0,0">
        <Button Content="Launch OTTD" HorizontalAlignment="Left" Margin="135,35,0,0" VerticalAlignment="Top" Width="120" Command="{Binding LaunchTTDCommand}"/>
        <Button Content="Add Save Directory" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="120" Command="{Binding AddSaveDirectoryCommand}"/>
        <Button Content="Add Game Path" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="120" Command="{Binding AddGamePathCommand}"/>
        <Button Content="Login to Dropbox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Command="{Binding ApplyLoginDetailsCommand}"/>

    </Grid>
</Window>
